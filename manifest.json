{
  "name": "Twitter Patch",
  "version": "0.0.0.1",
  "manifest_version": 3,
  "description": "An extension with modifications to the website formerly known as Twitter.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "content-scripts/content.js"
      ]
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}